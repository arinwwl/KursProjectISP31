<UserControl x:Class="CarRentalSystem.View.PositionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:CarRentalSystem.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:PositionViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Список должностей -->
        <StackPanel Grid.Column="0" Margin="0 0 10 0">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Должности" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="10 0 0 0" Width="150" 
                         ToolTip="Фильтр по названию, обязанностям или зарплате"/>
            </StackPanel>

            <ListView ItemsSource="{Binding PositionsView}" 
                      SelectedItem="{Binding SelectedPosition}"
                      Height="300">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding PositionName}" Width="150"/>
                        <GridViewColumn Header="Зарплата" DisplayMemberBinding="{Binding Salary}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <!-- Форма редактирования -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Редактирование должности" FontWeight="Bold" Margin="0 0 0 10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Название должности -->
                <TextBlock Text="Название:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox Text="{Binding CurrentPosition.PositionName, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="0" Grid.Column="1" Margin="5"/>

                <!-- Зарплата -->
                <TextBlock Text="Зарплата:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox Text="{Binding CurrentPosition.Salary, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="1" Grid.Column="1" Margin="5"/>

                <!-- Обязанности -->
                <TextBlock Text="Обязанности:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Top"/>
                <TextBox Text="{Binding CurrentPosition.Responsibilities}" 
                         Grid.Row="2" Grid.Column="1" Margin="5"
                         AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>

                <!-- Требования -->
                <TextBlock Text="Требования:" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Top"/>
                <TextBox Text="{Binding CurrentPosition.Requirements}" 
                         Grid.Row="3" Grid.Column="1" Margin="5"
                         AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>
            </Grid>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 15 0 0">
                <Button Content="Добавить" Command="{Binding AddCommand}" Width="100" Margin="5"/>
                <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" Margin="5"
                        IsEnabled="{Binding IsPositionSelected}"/>
                <Button Content="Удалить" Command="{Binding DeleteCommand}" Width="100" Margin="5"
                        IsEnabled="{Binding IsPositionSelected}"/>
                <Button Content="Очистить" Command="{Binding ClearCommand}" Width="100" Margin="5"/>
                <Button Content="Отчет" Command="{Binding GenerateReportCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>