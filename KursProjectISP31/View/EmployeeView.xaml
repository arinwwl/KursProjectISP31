<UserControl x:Class="CarRentalSystem.View.EmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:CarRentalSystem.ViewModel"
             xmlns:local="clr-namespace:CarRentalSystem.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:EmployeeViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Список сотрудников -->
        <StackPanel Grid.Column="0" Margin="0 0 10 0">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Сотрудники" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="10 0 0 0" Width="150" 
                         ToolTip="Фильтр по ФИО, телефону или паспорту"/>
            </StackPanel>

            <ListView ItemsSource="{Binding EmployeesView}" 
                      SelectedItem="{Binding SelectedEmployee}"
                      Height="300">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FullName}" Width="150"/>
                        <GridViewColumn Header="Должность" DisplayMemberBinding="{Binding Position.PositionName}" Width="120"/>
                        <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <!-- Форма редактирования -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Данные сотрудника" FontWeight="Bold" Margin="0 0 0 10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ФИО -->
                <TextBlock Text="ФИО:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox Text="{Binding CurrentEmployee.FullName, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="0" Grid.Column="1" Margin="5"/>

                <!-- Возраст -->
                <TextBlock Text="Возраст:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox Text="{Binding CurrentEmployee.Age, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="1" Grid.Column="1" Margin="5"/>

                <!-- Пол -->
                <TextBlock Text="Пол:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <ComboBox SelectedItem="{Binding CurrentEmployee.Gender}" 
                          Grid.Row="2" Grid.Column="1" Margin="5">
                    <ComboBoxItem>Мужской</ComboBoxItem>
                    <ComboBoxItem>Женский</ComboBoxItem>
                </ComboBox>

                <!-- Должность -->
                <TextBlock Text="Должность:" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Positions}" 
                          DisplayMemberPath="PositionName"
                          SelectedValuePath="PositionID"
                          SelectedValue="{Binding CurrentEmployee.PositionID}"
                          Grid.Row="3" Grid.Column="1" Margin="5"/>

                <!-- Адрес -->
                <TextBlock Text="Адрес:" Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox Text="{Binding CurrentEmployee.Address}" 
                         Grid.Row="4" Grid.Column="1" Margin="5"/>

                <!-- Телефон -->
                <TextBlock Text="Телефон:" Grid.Row="5" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox Text="{Binding CurrentEmployee.Phone}" 
                         Grid.Row="5" Grid.Column="1" Margin="5"/>

                <!-- Паспортные данные -->
                <TextBlock Text="Паспортные данные:" Grid.Row="6" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox Text="{Binding CurrentEmployee.PassportData}" 
                         Grid.Row="6" Grid.Column="1" Margin="5"/>
            </Grid>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 15 0 0">
                <Button Content="Добавить" Command="{Binding AddCommand}" Width="100" Margin="5"/>
                <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" Margin="5"
                        IsEnabled="{Binding IsEmployeeSelected}"/>
                <Button Content="Удалить" Command="{Binding DeleteCommand}" Width="100" Margin="5"
                        IsEnabled="{Binding IsEmployeeSelected}"/>
                <Button Content="Очистить" Command="{Binding ClearCommand}" Width="100" Margin="5"/>
                <Button Content="Отчет" Command="{Binding GenerateReportCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>