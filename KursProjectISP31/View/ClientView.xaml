<UserControl x:Class="CarRentalSystem.View.ClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:CarRentalSystem.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:ClientViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Список клиентов -->
        <StackPanel Grid.Column="0" Margin="0 0 10 0">
            <TextBlock Text="Список клиентов" FontWeight="Bold" Margin="0 0 0 5"/>
            <ListView ItemsSource="{Binding Clients}" 
                      SelectedItem="{Binding SelectedClient}"
                      Height="300">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FullName}" Width="150"/>
                        <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <!-- Форма редактирования -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Данные клиента" FontWeight="Bold" Margin="0 0 0 10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="ФИО:" Grid.Row="0" Grid.Column="0" Margin="5"/>
                <TextBox Text="{Binding CurrentClient.FullName, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="0" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Пол:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                <ComboBox SelectedItem="{Binding CurrentClient.Gender}" 
                          Grid.Row="1" Grid.Column="1" Margin="5">
                    <ComboBoxItem>Мужской</ComboBoxItem>
                    <ComboBoxItem>Женский</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Дата рождения:" Grid.Row="2" Grid.Column="0" Margin="5"/>
                <DatePicker SelectedDate="{Binding CurrentClient.BirthDate}" 
                             Grid.Row="2" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Адрес:" Grid.Row="3" Grid.Column="0" Margin="5"/>
                <TextBox Text="{Binding CurrentClient.Address}" 
                         Grid.Row="3" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Телефон:" Grid.Row="4" Grid.Column="0" Margin="5"/>
                <TextBox Text="{Binding CurrentClient.Phone}" 
                         Grid.Row="4" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Паспортные данные:" Grid.Row="5" Grid.Column="0" Margin="5"/>
                <TextBox Text="{Binding CurrentClient.PassportData}" 
                         Grid.Row="5" Grid.Column="1" Margin="5"/>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <Button Content="Добавить" Command="{Binding AddCommand}" Width="100" Margin="5"/>
                <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" Margin="5"/>
                <Button Content="Удалить" Command="{Binding DeleteCommand}" Width="100" Margin="5"/>
                <Button Content="Очистить" Command="{Binding ClearCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>