<UserControl x:Class="CarRentalSystem.View.RentalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:CarRentalSystem.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:RentalViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Список аренд -->
        <StackPanel Grid.Column="0" Margin="0 0 10 0">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Аренды" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="10 0 0 0" Width="150" 
                         ToolTip="Фильтр по клиенту, автомобилю или ID"/>
            </StackPanel>

            <ListView ItemsSource="{Binding RentalsView}" 
                      SelectedItem="{Binding SelectedRental}"
                      Height="300">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding RentalID}" Width="50"/>
                        <GridViewColumn Header="Клиент" DisplayMemberBinding="{Binding Client.FullName}" Width="150"/>
                        <GridViewColumn Header="Автомобиль" DisplayMemberBinding="{Binding Car.RegistrationNumber}" Width="100"/>
                        <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding TotalPrice}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <!-- Форма редактирования -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Договор аренды" FontWeight="Bold" Margin="0 0 0 10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Дата выдачи -->
                <TextBlock Text="Дата выдачи:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <DatePicker SelectedDate="{Binding CurrentRental.IssueDate}" 
                             Grid.Row="0" Grid.Column="1" Margin="5"/>

                <!-- Срок аренды -->
                <TextBlock Text="Срок (дни):" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <TextBox Text="{Binding CurrentRental.RentalPeriod, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="1" Grid.Column="1" Margin="5"/>

                <!-- Дата возврата -->
                <TextBlock Text="Дата возврата:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <DatePicker SelectedDate="{Binding CurrentRental.ReturnDate}" 
                             Grid.Row="2" Grid.Column="1" Margin="5"/>

                <!-- Автомобиль -->
                <TextBlock Text="Автомобиль:" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding AvailableCars}" 
                          DisplayMemberPath="RegistrationNumber"
                          SelectedValuePath="CarID"
                          SelectedValue="{Binding CurrentRental.CarID}"
                          Grid.Row="3" Grid.Column="1" Margin="5"/>

                <!-- Клиент -->
                <TextBlock Text="Клиент:" Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Clients}" 
                          DisplayMemberPath="FullName"
                          SelectedValuePath="ClientID"
                          SelectedValue="{Binding CurrentRental.ClientID}"
                          Grid.Row="4" Grid.Column="1" Margin="5"/>

                <!-- Сотрудник -->
                <TextBlock Text="Сотрудник:" Grid.Row="5" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Employees}" 
                          DisplayMemberPath="FullName"
                          SelectedValuePath="EmployeeID"
                          SelectedValue="{Binding CurrentRental.EmployeeID}"
                          Grid.Row="5" Grid.Column="1" Margin="5"/>

                <!-- Доп. услуги -->
                <TextBlock Text="Доп. услуга 1:" Grid.Row="6" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Services}" 
                          DisplayMemberPath="ServiceName"
                          SelectedValuePath="ServiceID"
                          SelectedValue="{Binding CurrentRental.Service1ID}"
                          Grid.Row="6" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Доп. услуга 2:" Grid.Row="7" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Services}" 
                          DisplayMemberPath="ServiceName"
                          SelectedValuePath="ServiceID"
                          SelectedValue="{Binding CurrentRental.Service2ID}"
                          Grid.Row="7" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Доп. услуга 3:" Grid.Row="8" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Services}" 
                          DisplayMemberPath="ServiceName"
                          SelectedValuePath="ServiceID"
                          SelectedValue="{Binding CurrentRental.Service3ID}"
                          Grid.Row="8" Grid.Column="1" Margin="5"/>

                <!-- Сумма и оплата -->
                <TextBlock Text="Итого:" Grid.Row="9" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding TotalPrice}" IsReadOnly="True" Width="100" Margin="5"/>
                    <Button Content="Рассчитать" Command="{Binding CalculatePriceCommand}" Margin="5" Width="100"/>
                    <CheckBox Content="Оплачено" IsChecked="{Binding CurrentRental.IsPaid}" VerticalAlignment="Center" Margin="5"/>
                </StackPanel>
            </Grid>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 15 0 0">
                <Button Content="Добавить" Command="{Binding AddCommand}" Width="100" Margin="5"/>
                <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" Margin="5"
                        IsEnabled="{Binding IsRentalSelected}"/>
                <Button Content="Удалить" Command="{Binding DeleteCommand}" Width="100" Margin="5"
                        IsEnabled="{Binding IsRentalSelected}"/>
                <Button Content="Очистить" Command="{Binding ClearCommand}" Width="100" Margin="5"/>
                <Button Content="Печать" Command="{Binding PrintContractCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>