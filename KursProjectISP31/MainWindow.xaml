<Window x:Class="CarRentalSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRentalSystem.View"
        xmlns:vm="clr-namespace:CarRentalSystem.ViewModel"
        mc:Ignorable="d"
        Title="Car Rental System" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Навигационное меню -->
        <StackPanel Grid.Column="0" Background="#333">
            <Button Content="Cars" Command="{Binding NavigateToCarsCommand}" Margin="5"/>
            <Button Content="Employees" Command="{Binding NavigateToEmployeesCommand}" Margin="5"/>
            <Button Content="Clients" Command="{Binding NavigateToClientsCommand}" Margin="5"/>
            <Button Content="Rentals" Command="{Binding NavigateToRentalsCommand}" Margin="5"/>
            <Button Content="Positions" Command="{Binding NavigateToPositionsCommand}" Margin="5"/>
            <Button Content="Brands" Command="{Binding NavigateToBrandsCommand}" Margin="5"/>
            <Button Content="Services" Command="{Binding NavigateToServicesCommand}" Margin="5"/>
            <Button Content="Exit" Command="{Binding ExitCommand}" Margin="5" Background="Red"/>
        </StackPanel>

        <!-- Область контента -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>